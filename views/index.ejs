<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/utilities.css">
    <title>Torre | Skills</title>
</head>
<body>
    <!-- Navbar -->
    <div class="navbar">
        <div class="container flex">
            <h1 class="logo">Torre.</h1>
            <nav>
            </nav>
        </div>
    </div>

    <section class="showcase">
        <div class="container grid">
            <div class="showcaseText">
                <h1>Get Your Skills</h1>
                <p>Looking to showcase your skills and stand out in the job market? Look no further than Torre API.With our platform, you can easily access and highlight your skills and experiences to potential employers.</p>
            </div>
            <div class="showcaseForm card">
                <h2>Get Your Skills !</h2>
                <form name="contact" method="POST" action="/" >
                    <div class="formControl">
                        <input type="text" name="username" placeholder="Username" required>
                    </div>
                    <input type="submit" value="Get Skills" class="btn btn-secondary">
                </form>
            </div>
        </div>
    </section>
    <!-- Skills -->
    <% if (skills && skills.length > 0) { %>
        <section class="skills">
          <div class="container ">
            <div class="card">
              <h4>Master</h4>
              <ul>
                <% skills.forEach(skill => { %>
                  <%if(skill.proficiency=="master"){ %>
                    <li><%= skill.name %></li>
                  <% } %>
                <% }); %>
              </ul>
            </div>
            <div class="card">
              <h4>Expert</h4>
              <ul>
                <% skills.forEach(skill => { %>
                  <%if(skill.proficiency=="expert"){ %>
                    <li><%= skill.name %></li>
                  <% } %>
                <% }); %>
              </ul>
            </div>
            <div class="card">
              <h4>Proficient</h4>
              <ul>
                <% skills.forEach(skill => { %>
                  <%if(skill.proficiency=="proficient"){ %>
                    <li><%= skill.name %></li>
                  <% } %>
                <% }); %>
              </ul>
            </div>
            <div class="card">
              <h4>Novice</h4>
              <ul>
                <% skills.forEach(skill => { %>
                  <%if(skill.proficiency=="novice"){ %>
                    <li><%= skill.name %></li>
                  <% } %>
                <% }); %>
              </ul>
            </div>
            <div class="card">
              <h4>No Experience But Interested</h4>
              <ul>
                <% skills.forEach(skill => { %>
                  <%if(skill.proficiency=="no-experience-interested"){ %>
                    <li><%= skill.name %></li>
                  <% } %>
                <% }); %>
              </ul>
            </div>
          </div>  
          </div>
        </section>
      <% } %>
          <!-- Footer -->
    <footer class="footer bg-dark py5">
        <div class="container grid grid3">
            <div>
                <h1>Torre.</h1>
            </div>
            <nav>
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">About Us</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </nav>
            <div class="social">
                <a href="#" target="_blank"><i class="fab fa-github fa-2x"></i></a>
                <a href="#"><i class="fab fa-facebook fa-2x"></i></a>
                <a href="#"><i class="fab fa-instagram fa-2x"></i></a>
                <a href="#"><i class="fab fa-twitter fa-2x"></i></a>
            </div>
        </div>
    </footer>
          </body>
</html>